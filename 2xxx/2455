#include <iostream>

using namespace std;

    int main()
    {
        int a, b;
        int people = 0;
        int max = 0;

        for (int i = 0; i < 4; i++)
        {
            cin >> a >> b;

            people += b - a;

            if (people > max)
                max = people;
            else
                max = max;
        }

        cout << max;

        return 0;
    }
